{
  "compilerOptions": {
    "outDir": "./dist/",
    "allowJs": true,
    "baseUrl": ".",
    "declaration": false,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "lib": ["es5", "es6", "dom"],
    "module": "esnext",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "strictNullChecks": false,
    "sourceMap": true,
    "strict": true,
    "target": "es5",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true
  },
  "exclude": ["./node_modules/**", "./dist/**"],
  "compileOnSave": false
}
